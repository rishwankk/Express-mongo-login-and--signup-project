<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%=title %> </title> 
    <link rel="stylesheet" href="./stylesheet/signupstyle.css">
   </head>
<body>
  <div class="wrapper">
    <h2>Registration</h2>
  

    <% if (error?.existError) { %>
      <p style="color: red;"><%= error.existError%> </p>
  <% } %>
  
    <form id="signupform" action="/signup" method="post" ">

      <div class="password-error">Password must contain at least one uppercase letter, one lowercase letter, one digit, one special character, and be at least 8 characters </div>
      <% if (error?.passRegex){ %>
        <p style="color: red;"><%= error.passRegex %></p>
    <% } %>
    
 
      
    <div class="error-msg">Password mismatch</div>
      <div class="input-box">
        <input type="text" placeholder="Enter your name"  id="name"  name="userName">
        <% if (error?.nameError){ %>
          <p style="color: red;"><%= error.nameError %></p>
      <% } %>
       <div class="error-message">name is required</div>
       <div class="error-name">name must be contain 3 letter</div>
        
      </div>
      <div class="input-box">
        <input type="text" placeholder="Enter your email"  id="email"  name="userEmail">
      
        
 
      <div class="error-email">email is required</div>
      <div class="email-message">email must be contain @ </div>
  
      </div>
      <div class="input-box">
        <input type="password" placeholder="Create password"  id="pass" name="userPassword">
        
      <div class="error-pass">password is required</div>
      <% if (error?.passError){ %>
        <p style="color: red;"><%= error.passError %></p>
    <% } %>
     
      </div>
      <div class="input-box">
        <input type="password" placeholder="Confirm password"  id="cpass" name="ConfirmPass">
        <% if (error?.cpassError) { %>
          <p style="color: red;"><%= error.passError%></p>
      <% } %>
     
     
      </div>
      <div class="policy">
        <input type="checkbox">
        <h3>I accept all terms & condition</h3>
      </div>
      <div class="input-box button">
        <button  type="Submit">Register Now</button>
      </div>
      <div class="text">
        <h3>Already have an account? <a href="/login">Login now</a></h3>
      </div>
    </form>
  </div>
  <script src="../js/signupvalidation.js">
  
  </script>
</body>
</html>